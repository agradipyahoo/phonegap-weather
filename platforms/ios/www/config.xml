<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.weather" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Weather</name>
    <description>Sample Weather App</description>
    <author email="fatih@moonit.com" href="http://moonit.com">MFYZ</author>

    <preference name="permissions" value="none" />
    <preference name="phonegap-version" value="3.5.0" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="false" />
    <preference name="disable-cursor" value="false" />
	<preference name="DisallowOverscroll" value="true" />

    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.dialogs" />

    <icon src="www/img/icon.png" />
	<platform name="ios">
		<icon width="57" height="57" src="www/img/icon-57.png" />
		<icon width="72" height="72" src="www/img/icon-72.png" />
		<icon width="114" height="114" src="www/img/icon-57-2x.png" />
		<icon width="144" height="144" src="www/img/icon-72-2x.png" />
	</platform>

    <access origin="*" />
</widget>
